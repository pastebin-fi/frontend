    main.container
        h2
            #translate-newPasteHeading Luo uusi liite
        form(method="POST", action="/")
            fieldset
                .form-group
                    label(for="name")
                    #translate-nameOfPaste Liitteen nimi:
                    input#name(type="text", placeholder="Nimi...", name="title")
